{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#000DFF",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#FF410D",
                    "name": "Secondary"
                },
                {
                    "slug": "tertiary",
                    "color": "#6119FF",
                    "name": "Tertiary"
                },
                {
                    "slug": "quaternary",
                    "color": "#ffffdd",
                    "name": "Quaternary"
                },
                {
                    "slug": "gray",
                    "color": "#adb5bd",
                    "name": "Gray"
                },
                {
                    "slug": "black",
                    "color": "#000",
                    "name": "Black"
                },
                {
                    "slug": "white",
                    "color": "#fff",
                    "name": "White"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-to-tertiary",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--quinary), var(--wp--preset--color--secondary))",
                    "name": "Primary to tertiary"
                }
            ],
            "background": true,
            "custom": true,
            "link": true
        },
        "typography": {
            "lineHeight": true,
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
                    "slug": "system-fonts",
                    "name": "System Fonts"
                },
                {
                    "fontFamily": "Geneva, Tahoma, Verdana, sans-serif",
                    "slug": "geneva-verdana"
                },
                {
                    "fontFamily": "Cambria, Georgia, serif",
                    "slug": "cambria-georgia"
                }
            ],
            "fontSizes": [
                {
                    "slug": "tiny",
                    "size": "1rem",
                    "name": "Tiny"
                },
                {
                    "slug": "small",
                    "size": "1.125rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1.25rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.5rem",
                    "name": "Large"
                },
                {
                    "slug": "extra-large",
                    "size": "2.5rem",
                    "name": "Extra large"
                }
            ],
            "fontWeight": true,
            "customFontSize": true
        },
        "spacing": {
            "blockGap": true,
            "padding": true,
            "margin": true,
            "units": [ "px", "em", "rem", "vh", "vw", "%" ]
        },
        "layout": {
            "contentSize": "1020px",
            "wideSize": "1296px"
        },
        "border": {
            "color": true,
            "radius": true,
            "width": true,
            "style": true
        },
        "dimensions": {
            "minHeight": true
        },
        "blocks": {
            "core/paragraph": {
                "color": {
                    "palette": [
                        {
                            "slug": "secondary",
                            "color": "#adb5bd",
                            "name": "Secondary"
                        },
                        {
                            "slug": "primary",
                            "color": "#000",
                            "name": "Primary"
                        }
                    ],
                    "background": true
                }
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)"
        },
        "spacing": {
            "padding": {
                "top": "2px",
                "right": "2px",
                "bottom": "2"
            },
            "blockGap": "0.5rem"
        },
        "elements": {
            "button": {
                "color": {
                    "text": "var(--wp--preset--color--white)",
                    "background": "var(--wp--preset--color--quaternary)"
                },
                "border": {
                    "radius": "14px"
                }
            }
        }
    }
}